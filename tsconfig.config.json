{
    "include": ["vite.config.*", "vitest.config.*", "playwright.config.*"],
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    }
}
